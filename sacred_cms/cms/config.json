  "hygraph": {
    "endpoint": "${HYGRAPH_ENDPOINT}",
    "token": "${HYGRAPH_TOKEN}",
    "models": {
      "SacredDoc": {
        "fields": {
          "title": "String",
          "slug": "String (Unique)",
          "body": "RichText",
          "category": "String",
          "accessLevel": "String",
          "immutable": "Boolean",
          "createdAt": "DateTime",
          "updatedAt": "DateTime"
        }
      }
    }
  },
  
